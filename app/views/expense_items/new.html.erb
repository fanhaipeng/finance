<h1>新建消费记录</h1>

<% form_for(@expense_item) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :date, '日期' %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label :expense_type_id, '类型' %><br />
    <%= f.select :expense_type_id, @expense_types %>
  </p>
  <p>
    <%= f.label :value, '金额' %><br />
    <%= f.text_field :value %>
  </p>
  <p>
    <%= f.label :note, '备注' %><br />
    <%= f.text_area :note %>
  </p>

  <p>
    <fieldset>
      <legend>标签（空格分隔）</legend>
        <%= f.text_field :tag_names %>
      <br/>
      <% @expense_tags.each do |tag| %>
        <%= tag.name %>
      <% end %>
    </fieldset>
  </p>

  <p>
    <%= f.submit '创建' %>
  </p>
<% end %>
<%= link_to '返回', expense_month_path(@year, @month) %>
