<h1>Listing expense_items</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Expense type</th>
    <th>Value</th>
    <th>Note</th>
    <th>Tags</th>
  </tr>

<% @expense_items.each do |expense_item| %>
  <tr>
    <td><%=h expense_item.date %></td>
    <td><%=h expense_item.expense_type_id %></td>
    <td><%=h expense_item.value %></td>
    <td><%=h expense_item.note %></td>
    <td><%=h expense_item.tag_names %></td>
    <td><%= link_to 'Show', expense_item %></td>
    <td><%= link_to 'Edit', edit_expense_item_path(expense_item) %></td>
    <td><%= link_to 'Destroy', expense_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

