<div class="formPanel">
  <% form_for(@user) do |f| %>
    <p class="warningNotice">
      <%= flash[:notice] if flash[:notice] %>
    </p>
  
    <p class="formField">
      <%= f.label :nickname, '名字：' %><br />
      <%= f.text_field :nickname %>
    </p>
    <% fields_for :verify do |field| %>
      <p class="formField">
        <%= field.label :oldpass, '旧密码：' %><br />
        <%= field.password_field :oldpass %>
      </p>
    <% end %>
    <p class="formField">
      <%= f.label :password, '新密码：' %><br />
      <%= f.password_field :password %>
    </p>
    <p class="formField">
      <%= f.label :password_confirmation, '确认密码：' %><br />
      <%= f.password_field :password_confirmation %>
    </p>
    <p class="formField">
      <%= f.submit '更新' %>
      <%= link_to '返回>>', (@current_user.role == 0 ? users_path : expense_month_path(Date.today.year, Date.today.mon)), :class => 'backLink' %>
    </p>
  <% end %>
</div>

