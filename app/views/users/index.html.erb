<table id="userTable">
  <tr class="userTableHeadRow">
    <th class="userTableColumn1">名字</th>
    <th class="userTableColumn2">电子邮箱</th>
    <th class="userTableColumn3">用户类型</th>
    <th class="userTableColumn4">操作</th>
  </tr>

<% @users.each do |user| %>
  <tr class="userTableDataRow">
    <td class="userTableDataCell"><%=h user.nickname %></td>
    <td class="userTableDataCell"><%=h user.email %></td>
    <td class="userTableDataCell">
      <% if 0 == user.role %>
        管理员
      <% else %>
        普通用户
      <% end %>
    </td>
    <td class="userTableDataCell"><%= link_to '显示', user %> | 
    <%= link_to '编辑', edit_user_path(user) %> | 
    <%= link_to '删除', user, :confirm => '确定要删除吗？', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
