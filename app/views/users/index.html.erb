<h1>显示所有用户</h1>

<table>
  <tr>
    <th>名字</th>
    <th>电子邮箱</th>
    <th>用户类型</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.nickname %></td>
    <td><%=h user.email %></td>
    <td>
      <% if 0 == user.role %>
        管理员
      <% else %>
        普通用户
      <% end %>
    </td>
    <td><%= link_to '显示', user %></td>
    <td><%= link_to '编辑', edit_user_path(user) %></td>
    <td><%= link_to '删除', user, :confirm => '确定要删除吗？', :method => :delete %></td>
  </tr>
<% end %>
</table>

